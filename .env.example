# Пример конфигурации для Heroku

# ОБЯЗАТЕЛЬНЫЕ переменные
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USERNAME=your_telegram_username

# База данных (автоматически на Heroku при добавлении Postgres addon)
# DATABASE_URL=  # Устанавливается автоматически Heroku

# Cobalt API (Локальный на том же dyno)
# Cobalt запускается автоматически через start.sh
COBALT_API_URL=http://localhost:9000/
USE_COBALT=true

# Настройки Cobalt API сервера (ОБЯЗАТЕЛЬНО для запуска Cobalt)
API_URL=http://localhost:9000/
API_PORT=9000
CORS_WILDCARD=1

# Proxy для Cobalt (ОПЦИОНАЛЬНО)
# Если нужен для обхода блокировок YouTube/Instagram/TikTok
# HTTP_PROXY=
# HTTPS_PROXY=

# Cookies (ОПЦИОНАЛЬНО)
# Для приватных видео Instagram/Facebook/Twitter
# COOKIES_CONTENT=

# Whitelist (ОПЦИОНАЛЬНО)
# Если хотите ограничить доступ к боту
# WHITELISTED=username1,username2,username3
